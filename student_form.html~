<!DOCTYPE html>
<html>
<head>


	<link rel="stylesheet" type="text/css" href="/home/webonise/Nayana/student_form/student.css" />
	<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js">
	</script>

	<script>
	window.resizeTo(200,200 );
	$(document).ready(function(){
  	$("#submit").click(function(){
    	name=$('#name').val();
	if(($('#name').val())=="" || ($('#age').val())=="" || ($('#gender').val())=="" || ($('#email').val())=="" || ($('#description').val())=="" ||
	($('#address').val())=="" || ($('#pincode').val())=="")
	{
	alert("Please fill data");
	return false;
	}

	pin=$('#pincode').val().length;
	
	if(pin>6 || pin<6)
	{
	alert("Wrong pin code");
	$('#pincode').val("");
	return false;
	}

	var emailRegex = new RegExp(/^([\w\.\-]+)@([\w\-]+)((\.(\w){2,3})+)$/i);
 	var valid = emailRegex.test($('#email').val());
  	if (!valid) {
    	alert("Invalid e-mail address");
	$('#email').val("");
    	return false;
  	} 

	var intRegex = /[0-9 -()+]+$/; 
	if($('#pincode').val().search(intRegex)==-1)
	{
	alert("Please enter numeric data in pincode");
	$('#pincode').val("");
	return false;
	}
	if($('#age').val().search(intRegex)==-1)
	{
	alert("Please enter numeric data in age");
	$('#age').val("");
	return false
	}
	
	
	if($('#name').val().search(intRegex)==0)
	{
	alert("Please enter correct name");
	$('#name').val("");
	return false;
	}
	if($('#description').val().search(intRegex)==0)
	{
	alert("Please enter correct data in description");
	$('#description').val("");
	return false;
	}
	
	
  });
});
 </script>
</head>
	
