	<script>
	window.resizeTo(200,200 );
	$(document).ready(function(){
  	$("#submit").click(function(){
    	name=$('#name').val();
	if(($('#name').val())=="" || ($('#age').val())=="" || ($('#gender').val())=="" || ($('#email').val())=="" || ($('#description').val())=="" ||
	($('#address').val())=="" || ($('#pincode').val())=="")
	{
	alert("Error");
	return false;
	}

	pin=$('#pincode').val().length;
	
	if(pin>6 || pin<6)
	{
	alert("wrong pin");
	return false;
	}
	
	var intRegex = /[0-9 -()+]+$/; 
	if($('#pincode').val().search(intRegex)==-1 || $('#age').val().search(intRegex)==-1 ) 
	{
	alert("Please enter data in correct form");
	return false;
	}
	
	if($('#name').val().search(intRegex)==0 || $('#description').val().search(intRegex)==0)
	{
	alert("Please enter data in correct format");
	return false;
	}
	
	
  });
});
 </script>
